{:deps  {dev.onionpancakes/serval-core     {:local/root "../../modules/serval-core"}
         dev.onionpancakes/serval-jetty    {:local/root "../../modules/serval-jetty"}
         dev.onionpancakes/serval-jsonista {:local/root "../../modules/serval-jsonista"}
         dev.onionpancakes/serval-reitit   {:local/root "../../modules/serval-reitit"}}
 :paths ["src"]

 :aliases
 {:dev
  {:extra-deps  {dev.onionpancakes/serval-jetty-test {:local/root "../../modules/serval-jetty-test"}
                 org.slf4j/slf4j-simple              {:mvn/version "2.0.9"}}
   :extra-paths ["dev" "test"]}

  :start
  {:extra-deps {org.slf4j/slf4j-simple {:mvn/version "2.0.9"}}
   :main-opts  ["-m" "dev.onionpancakes.serval.examples.hello-world.server"]}

  :run-tests
  {:extra-deps  {dev.onionpancakes/serval-jetty-test  {:local/root "../../modules/serval-jetty-test"}
                 io.github.cognitect-labs/test-runner {:git/tag "v0.5.1" :git/sha "dfb30dd"}}
   :extra-paths ["test"]
   :exec-fn     cognitect.test-runner.api/test
   :exec-args   {:dirs     ["test"]
                 :patterns ["dev\\.onionpancakes\\.serval\\.examples\\.hello-world\\.tests\\..*"]}}}}
